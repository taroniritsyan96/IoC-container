{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["es2020"],
    "rootDir": "server",
    "outDir": "./dist/server",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules"]
}
